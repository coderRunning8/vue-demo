$black=#000
$white=#FFF
$color1=#F0F0F0
$color2=#C9C9C9
$color3=#808080
$color4=#B2B2B2
$color5=#FFEE8A
$color6=#FFDC71
$color7=#333
$color8=#606060
$color9=#F2F2F2
$color10=#D8D8D8

$border(s)
    border-{s} 1px solid $color9

$flex()
    display flex
    justify-content center
    align-items center

$button(p,bc,c,w)
    position p
    bottom 0
    left 0
    border 0
    background-color bc
    color c
    font-size 17px
    width w
    height 50px

//弹窗
#alertWarn
    width 50%
    font-size: 17px
    background-color: #000
    color: #fff;
    text-align: center;
    opacity:0.5;
    padding: 20px
    margin: 0 auto;
    border-radius 7px

// 搜索
.search
    padding 0 8px
    background-color $color6
    width 100%
    height 50px
    position relative
    .searchInput
        margin-top 10px
        border 0
        outline none
        text-indent 2em
        font-size 14px
        border-radius 5px
        text-align center
        width @width
        height 30px
        &.searchFcous
            width 90%
    .searchBtn
        position absolute
        top 1rem
        right 0.5rem
        color #fff
        font-size 14px
// 列表
.listsBox
    width 100%
    overflow hidden
    .listXs
        padding 0 13px
        $border(top)
        color $color7
        width @width
        height 55px
        line-height @height
        &:last-child
            $border(bottom)
        .listTitle,.listText
            display inline-block
            vertical-align center
            font-size 17px
        .listTitle
            width 15%
            p
                display inline
                overflow: hidden;
                text-overflow:ellipsis;
                white-space: nowrap;
                .repertory
                    color $color3
        .listText
            float right
            color $color3
            width 75%
            text-align right
            input
                vertical-align top
                border 0
                text-align right
                font-size 17px
                width 100%
                height 53px
            .amount
                display inline-block
                vertical-align middle
                margin-top -5px
                border 1px solid #dfdfdf
                width 108px
                height 30px
                line-height normal
                font-size 0
                span
                    display inline-block
                    vertical-align top
                    width 28px
                    height 28px
                    line-height @height
                    text-align center
                    color $color7
                    font-size 21px
                    &:first-child
                        background-color #fafafa
                    &:last-child
                        background-color $color6
                input
                    border 0
                    text-align center
                    width 50px
                    height 28px
        .describe
            p
                margin-top 10px
                color $color3
                line-height 25px
                font-size 14px
            div
                font-size 14px
                color: #999
                line-height 25px
    .listHeightAuto
        border-bottom 0 !important
        margin-bottom: 50px
        height auto
    .arrows
        background url("data:image/png;base64,") right 13px center no-repeat
        background-size 7px 13px

// 底部购买盒子
.buyBox
    position fixed
    background-color: #fff
    left 0
    bottom 0
    padding-left 5px
    $border(top)
    color $color7
    width 100%
    height 49px
    line-height @height
    font-size 0
    .total
        vertical-align top
        font-size 17px
    .count
        font-size 24px
        color #FC9F13
    .buyNow
        float right
        display inline-block
        vertical-align middle
        font-size 0
        width 50%
        span
            display inline-block
            vertical-align middle
            font-size 17px
            text-align center
        .buyOnLine
            float right
            width 50%
            background-color $color6
        .buyOffLine
            float right
            width 50%
            background-color $color2
       


