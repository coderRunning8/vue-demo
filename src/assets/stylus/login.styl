.inputValueBox
    margin-top 108px
    text-align center
    h3
        margin-bottom 8px
        font-size 20
        color #3C3C3C
    .inputText
        margin-top 17px
        font-size 12px
        color $color7
    .errorMsg
        font-size 10px
        color #F00
    .inputValue
        margin 0 auto
        padding 12px 0
        border-bottom 2px solid $color9
        width 255px
        input
            border 0
            outline none
            font-size 24px
            color $color7
            width 150px
            height 33px
            line-height 33px
            text-align center
            line-height 33px
        span
            float right
            margin-top 8px
            img
                width 14px
                height 14px
    .next
        margin-top 40px
        width 100%
        height 24px
        text-align center
        span
            font-size 17px
            color #FC9F13
    .loading
        margin 60px auto 0 auto
        background-color #667380
        border-radius 6px
        color $white
        font-size 14px
        width 95px
        height 40px
        line-height @height
        text-align center
        span
            display inline-block
            padding-left 30px
            background url("../assets/icons/img_waitting@2x.png") left center no-repeat
            background-size 23px 24px
